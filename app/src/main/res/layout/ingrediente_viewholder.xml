<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <AutoCompleteTextView
        android:id="@+id/editText_ingredienteViewHolder_nombre"
        app:layout_constraintTop_toTopOf="@id/imageButton_ingredienteViewholder_eliminar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageButton_ingredienteViewholder_eliminar"
        android:layout_width="0dp"
        android:completionHint="Busca y selecciona un ingrediente"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.8"
        android:completionThreshold="1"/>



    <ImageButton
        android:id="@+id/imageButton_ingredienteViewholder_eliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/editText_ingredienteViewHolder_nombre"
        app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>