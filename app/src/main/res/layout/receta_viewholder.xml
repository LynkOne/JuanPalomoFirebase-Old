<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#d2d1d1"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_modnombrereceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombredospuntos"
            app:layout_constraintEnd_toStartOf="@id/mod_nombrereceta"
            app:layout_constraintTop_toTopOf="@id/mod_nombrereceta"
            app:layout_constraintBottom_toBottomOf="@id/mod_nombrereceta"/>

        <EditText
            android:id="@+id/mod_nombrereceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/mod_descreceta"
            app:layout_constraintBottom_toTopOf="@id/mod_descreceta"
            android:inputType=""
            android:importantForAutofill="no" tools:targetApi="o"/>

        <TextView
            android:id="@+id/tv_moddescrecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/descripciondospuntos"

            app:layout_constraintEnd_toStartOf="@id/mod_descreceta"
            app:layout_constraintTop_toTopOf="@id/mod_descreceta"
            app:layout_constraintBottom_toBottomOf="@id/mod_descreceta"/>

        <EditText
            android:id="@+id/mod_descreceta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@id/mod_nombrereceta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType=""
            android:importantForAutofill="no" tools:targetApi="o"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>